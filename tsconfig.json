{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["src/lib/*"],
      "@core/*": ["src/lib/core/*"],
      "@sync/*": ["src/lib/sync/*"],
      "@interaction/*": ["src/lib/interaction/*"],
      "@audio/*": ["src/lib/audio/*"],
      "@debug/*": ["src/lib/debug/*"],
      "@utils/*": ["src/lib/utils/*"],
      "@customTypes/*": ["src/lib/types/*"],
      "@shaders/*": ["src/lib/core/shaders/*"]
    }
  }
}
